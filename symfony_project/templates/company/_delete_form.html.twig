{% extends 'base.html.twig' %}

{% block title %}Edit Company
{% endblock %}

{% block body %}{% endblock %}

{% block main %}
    <section class="delete-section">
        <h3>Are you sure you want to delete?</h3>
        <p>This change is
            <span class="importantText">permanent</span>
            and cannot be undone.</p>
        <form method="post" action="{{ path('company_delete', {'id': company.id}) }}">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ company.id) }}">
            <button class="btn btn-danger">Delete</button>
        </form>
        <a href="{{ path('company_index') }}">
            <button class="btn btn-success">
                Cancel</button>
        </a>
        <section>
        {% endblock %}
